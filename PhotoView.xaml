<Window x:Class="PhotoReviewer.PhotoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Photo Viewer"
        Loaded="WindowLoaded"
        Icon="img/Icon.ico"
        KeyDown="Window_KeyDown"
        MouseDown="Window_MouseDown" Closed="Window_Closed">
    <Grid Margin="10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Name -->
        <Border HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0" Padding="4">
            <Label Name="ViewedCaption" HorizontalAlignment="Left" />
        </Border>

        <!-- Photo -->
        <Border Name="PhotoBorder" Grid.Column="0" Grid.Row="1" Padding="4" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="#22000000" BorderThickness="1">
            <Image Name="ViewedPhoto" />
        </Border>

        <!-- Nav -->
        <Border Grid.Column="0" Grid.Row="2" Padding="4">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="0,0,10,0" VerticalAlignment="Bottom" Click="PrevButton_Click">
                    <Image Source="img\LeftArrow.png"></Image>
                </Button>
                <Button VerticalAlignment="Top" Click="NextButton_Click" Margin="10,0,0,0">
                    <Image Source="img\RightArrow.png"></Image>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>