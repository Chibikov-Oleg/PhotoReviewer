<UserControl x:Class="PhotoReviewer.View.PathSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:PhotoReviewer.ViewModel;assembly=PhotoReviewer.ViewModel"
             xmlns:commonView="clr-namespace:Scar.Common.WPF.View;assembly=Scar.Common.WPF.View"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModel:MainViewModel, IsDesignTimeCreatable=False}"
             x:ClassModifier="internal">
    <DockPanel commonView:MarginSetter.Margin="10" commonView:MarginSetter.Orientation="Horizontal">
        <TextBlock>Path:</TextBlock>
        <TextBox Text="{Binding CurrentDirectoryPath, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Center">
            <TextBox.InputBindings>
                <KeyBinding Command="{Binding ChangeDirectoryPathCommand}"
                            CommandParameter="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}"
                            Key="Enter" />
            </TextBox.InputBindings>
        </TextBox>
        <Button HorizontalAlignment="Right" Width="80" Command="{Binding BrowseDirectoryCommand}" Content="Browse" />
    </DockPanel>
</UserControl>